<section class="news-section">
  <div class="my-container news-container">
    <div class="floating-header news-header-div">
      <h2><%= @news.title %></h2>
      <p>Nieuws</p>
    </div>
    <div class="block about-home-image-container">
      <% if @news.news_item_image.presence %>
        <%= cl_image_tag @news.news_item_image.key, class: "about-home-image" %>
      <% else %>
        <div class="about-image-placeholder">
          <h2>Nieuws</h2>
          <p>Upload een foto</p>
        </div>
      <% end %>
      <% if user_signed_in? %>
        <%= link_to  edit_news_image_news_item_path(@news), data: { turbo_frame: "modal" }, class: "image-edit" do %>
          <i class="fa-solid fa-pen" id="edit-pen"></i>
        <% end %>
      <% end %>
    </div>
    <%= link_to "Meer nieuws...", news_items_path, class:"page-link" %>
  </div>
</section>
