<%= simple_form_for [@about] do |f| %>
  <%= f.input :slogan, label: "SLOGAN" %>
  <%= f.input :second_slogan, label: "TWEEDE SLOGAN" %>
  <%= f.input :third_slogan, label: "DERDE SLOGAN" %>
  <%= f.input :first_info, label: "INFO 1", input_html: { rows: 10 } %>
