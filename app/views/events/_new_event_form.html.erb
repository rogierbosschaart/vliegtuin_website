<%= simple_form_for [@event], html: { id: "event_form", data: { turbo_frame: "_top" } } do |f| %>
        <%= f.input :title, label: "TITEL" %>
        <%= f.input :card_image, as: :file, label: "BANNER" %>
        <%= f.input :date, as: :date, order: [:day, :month, :year], label: "DATUM" %>
        <%= f.input :start_time, label: "BEGINT OM" %>
        <%= f.input :end_time, label: "EINDIGT OM" %>
        <%= f.input :description, label: "BESCHRIJVING", input_html: { rows: 10 } %>
        <%= f.submit "VERSTUUR" %>
      <% end %>
