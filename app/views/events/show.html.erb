<div class="event-banner-container">
  <% if  @event.card_image.presence %>
    <%= cl_image_tag @event.card_image.key, class: "event-middle-banner"%>
  <% else %>
    <div class="banner-placeholder">
      <h2>Banner Image</h2>
      <p>Upload a banner image to personalize your profile page.</p>
    </div>
  <% end %>
  <% if user_signed_in? %>
    <%= link_to edit_banner_event_path(@event), data: { turbo_frame: "modal" }, class: "image-edit" do %>
      <i class="fa-solid fa-pen" id="edit-pen"></i>
    <% end %>
  <% end %>
</div>

<section>
  <div class="my-container">
    <div class="d-flex justify-content-between align-items-center">
      <h2 class="event-page-header"><%= @event.title %></h2>
      <% if user_signed_in? %>
        <%= link_to edit_event_path(@event), data: { turbo_frame: "modal" } do %>
          <i class="fa-solid fa-pen mx-5"></i>
        <% end %>
      <% end %>
    </div>

    <p><%= @event.date.strftime('%-d %B') %> - <%= @event.start_time.strftime('%H:%M') %> - <%= @event.end_time.strftime('%H:%M') %></p>
    <p class="mt-5"><%= @event.description %></p>
  </div>
</section>
