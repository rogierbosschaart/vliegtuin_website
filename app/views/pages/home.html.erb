<section class="banner-section">
  <div class="banner">
    <%= image_tag "Vliegtuin.png", alt: "vliegtuin-logo", class: "vliegtuin-logo" %>
    <h1><%= @about.first.slogan %></h1>
  </div>
</section>

<div class="medium-light-background">
  <section class="about-section">
    <div class="about-container">
      <div class="about-info">
        <h2 class="about-header">Over Ons</h2>
        <p>
          <%= @about.first.info %>
        </p>
        <% if user_signed_in? %>
          <%= link_to edit_info_about_path(@about.first), data: { turbo_frame: "modal" }, class: "about-info-edit" do %>
            <i class="fa-solid fa-pen"></i>
          <% end %>
        <% end %>
        <%= link_to "Meer over ons...", over_ons_path, class:"page-link" %>
      </div>
      <div class="about-image">
        <div class="about-image-container">
          <% if @about.first.about_image.presence %>
            <%= cl_image_tag @about.first.about_image.key, class: "about-image" %>
          <% else %>
            <div class="about-image-placeholder">
              <h2>Banner Image</h2>
              <p>Upload a banner image to personalize your profile page.</p>
            </div>
          <% end %>
          <% if user_signed_in? %>
            <%= link_to  edit_about_image_about_path(@about.first), data: { turbo_frame: "modal" }, class: "about-image-edit" do %>
              <i class="fa-solid fa-pen"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <%# EVENEMENTEN %>

  <section class="events-section">
    <div class="d-flex justify-content-between align-items-center mt-5 mb-2">
      <h2 class="events-header">Evenementen</h2>
      <% if user_signed_in? %>
        <%= link_to new_event_path do%>
          <i class="fa-solid fa-plus"></i>
          <span>Evenement</span>
        <% end %>
      <% end %>
    </div>

    <div class="events-container">
      <% @events.each do |event| %>
        <%= link_to event_path(event) do %>
          <div class="event-card">
            <h3><%= event.title %> <%= event.date.strftime('%Y') %></h3>
            <div class="date-time">
              <p><%= event.date.strftime('%-d %B %Y') %> - <%= event.start_time.strftime('%H:%M') %> - <%= event.end_time.strftime('%H:%M') %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= link_to "Alle evenementen...", events_path, class:"page-link" %>
  </section>

  <%# PROFIEL PAGINAS %>
  <section class="profiles-section">
    <h2 class="makers-header">Onze Makers</h2>
    <% if user_signed_in? %>
      <%= link_to new_profile_page_path do%>
        <i class="fa-solid fa-plus"></i>
        <span>Pagina</span>
      <% end %>
    <% end %>


    <div class="profiles-container">
      <% @profile_pages.each do |profile| %>
        <%= link_to profile_page_path(profile) do %>
          <div class="profile-card">
            <%= cl_image_tag profile.profile_image.key, class: "profile-image" %>
            <h3><%= profile.naam %></h3>
            <p><%= profile.beroep %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>
</div>
