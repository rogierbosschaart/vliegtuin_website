<div class="appear about-page">
  <section class="about-sections about-banner-section">
    <div class="my-container about-banner-container">
      <h2 class="floating-header about-us-header"><%= @about.slogan %></h2>
      <div class="block about-image-container" id="about-second-image-container">
        <% if @about.about_image.presence %>
          <%= cl_image_tag @about.about_image.key, class: "about-image", id: "appear-image" %>
        <% else %>
          <div class="about-image-placeholder">
            <h2>Over ons Image</h2>
            <p>Upload een foto</p>
          </div>
        <% end %>
        <% if user_signed_in? && current_user.admin %>
          <%= link_to edit_about_image_about_path(@about), data: { turbo_frame: "modal" }, class: "image-edit" do %>
            <i class="fa-solid fa-pen" id="edit-pen"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

  <section class="about-sections about-info-section">
    <div class="block my-container">
      <p class="large-p center"><%= @about.first_info %></p>
    </div>
  </section>

  <section class="about-sections  second-slogan-section">
    <h2 class="floating-header about-second-slogan"><%= @about.second_slogan %></h2>
    <div class="block about-second-image-container">
      <% if @about.about_second_image.presence %>
        <%= cl_image_tag @about.about_second_image.key, class: "about-image" %>
      <% else %>
        <div class="about-image-placeholder">
          <h2>Over ons Image</h2>
          <p>Upload een foto</p>
        </div>
      <% end %>
      <% if user_signed_in? && current_user.admin %>
        <%= link_to edit_about_second_image_about_path(@about), data: { turbo_frame: "modal" }, class: "image-edit" do %>
          <i class="fa-solid fa-pen" id="edit-pen"></i>
        <% end %>
      <% end %>
    </div>
  </section>

  <section class="about-sections about-info-section">
    <div class="block my-container">
      <p class="large-p center"><%= @about.second_info %></p>
    </div>
  </section>

  <section>
    <div class="my-container">
      <h2><%= @news.title %></h3>
      <p><%= @news.info %></p>
    </div>
  </section>
</div>
