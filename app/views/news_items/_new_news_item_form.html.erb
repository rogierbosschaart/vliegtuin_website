<%= simple_form_for [@news_item], html: { id: "news_item_form", data: { turbo_frame: "_top" } } do |f| %>
  <%= f.input :news_item_image, as: :file, label: "FOTO" %>
  <%= f.input :title, label: "TITEL" %>
  <%= f.input :slogan, label: "SLOGAN" %>
  <%= f.input :info, label: "INFO", input_html: { rows: 10 } %>
  <%= f.submit "VERSTUUR" %>
<% end %>
